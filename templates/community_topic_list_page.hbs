<div class="container topic-list-page">
  <div class="container-inner">
    <div class="row clearfix">
  <div class="column column--sm-9">
    {{breadcrumbs}}
  </div>
  <div class="column column--sm-3">
    {{search submit=false scoped=true class="inpage__search"}}
  </div>
</div>


    <nav class="community-nav">
      <ul class="list-unstyled community-nav__items clearfix">
        <li class="community-nav__item is-active">{{t 'topics'}}</li>
        <li class="community-nav__item">{{link 'posts'}}</li>
        <li class="community-nav__item community-nav__item--button">{{link 'new_post' role='button' class='btn btn--default'}}</li>
      </ul>
    </nav>

    {{#if topics}}
      <ul class="list-unstyled row clearfix topic-list">
        {{#each topics}}
          <li class="column column--sm-6 topic-list-item">
            <div class="topic-list-item__box">
              <h3 class="topic-list-item__title">
                {{#if internal}}
                  <span class="fas fa-lock" title="{{t 'internal'}}"></span>
                {{/if}}
                <a href="{{url}}">{{name}}</a>
              </h3>
              <span class="meta topic-list-item__meta">
                <span class="meta__item">{{t 'post_count' count=post_count}}</span>
                <span class="meta__item">{{t 'follower_count' count=follower_count}}</span>
              </span>
            </div>
          </li>
        {{/each}}
      </ul>

      {{pagination}}
    {{else}}
      <p>{{t 'no_content'}}</p>
    {{/if}}
  </div>
</div>
